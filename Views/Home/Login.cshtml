@{
    ViewData["Title"] = "Login";
}

<div class="bg-wave">
    <div class="row form-group">
        <div class="col p-3 rounded left-container">
            <h1 class="heading fs-4 fw-bold">CƠ SỞ DỮ LIỆU KÊ KHAI ĐÁNH GIÁ</h1>
            <p class="description px-3">Hệ thống quản lý kê khai giá dịch vụ kỹ thuật của các cơ quan khám chữa bệnh,
                phòng khám và các đơn vị hành chính liên quan.</p>
        </div>
        <div class="col bg-light rounded ms-2 p-3">
            <form id="formLogin" action="" method="POST">
                <div id="txtUserName"></div>
                <div id="txtPassword"></div>
                <div id="btnSubmit" class="mt-3 fw-bold"></div>
            </form>
        </div>
        <a href="#" class="text-end text-light text-decoration-none mt-3">Quên tài khoản hoặc mật khẩu?</a>
    </div>

    <div>
        <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
            <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
            </defs>
            <g class="parallax">
                <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
                <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
                <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
                <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
            </g>
        </svg>
    </div>
</div>

@section js {
<script>
    $(document).ready(function () {
        InitDevextreme();
        Login();
    })
    //--------------------------------------------------------------------------------
    function InitDevextreme() {
        $("#txtUserName").dxTextBox({
            label: "Tên đăng nhập",
            showClearbtnSubmit: true,
            labelMode: "floating"
        }).dxValidator({
            validationRules: [{
                type: 'required',
                message: 'Vui lòng điền tên đăng nhập.',
            }],
        });

        $("#txtPassword").dxTextBox({
            label: "Mật khẩu",
            showClearbtnSubmit: true,
            labelMode: "floating",
            mode: "password"
        }).dxValidator({
            validationRules: [{
                type: 'required',
                message: 'Vui lòng điền mật khẩu.',
            }],
        });

        $('#btnSubmit').dxButton({
            stylingMode: 'text',
            icon: 'user',
            text: 'ĐĂNG NHẬP',
            type: 'default',
            useSubmitBehavior: true,
            width: '100%',
        });
    }
    //--------------------------------------------------------------------------------
    function Login() {
        $('#formLogin').on('submit', (e) => {
            DevExpress.ui.notify({
                message: 'Bạn đã ấn đăng nhập',
                position: {
                    my: 'center bottom',
                    at: 'center bottom',
                },
            }, 'success', 3000);

            e.preventDefault();
        });
    }
</script>
}